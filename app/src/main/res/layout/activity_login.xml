<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Login">

    <ImageView
        android:id="@+id/login_IMG_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_white"/>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_IMG_icon"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="false"

            />

        <com.simform.customcomponent.SSCustomEdittextOutlinedBorder
            android:id="@+id/login_EDT_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine|textCapSentences"
            app:custom_component_editText_hint="@string/USER_NAME_HINT"
            app:custom_component_maxline="1"
            app:custom_component_minline="1"
            app:custom_component_maxLength="25"
            app:custom_component_title = "@string/USER_NAME"
            app:custom_component_title_color="@color/color_brownish_grey_two"
            app:custom_component_title_error_color="@color/color_error"
            app:custom_component_border_color="@color/color_warm_grey"
            app:custom_component_border_error_color="@color/color_error"
            />

        <com.simform.customcomponent.SSCustomEdittextOutlinedBorder
            android:id="@+id/login_EDT_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            app:custom_component_editText_hint="@string/PASSWORD_HINT"
            app:custom_component_maxline="1"
            app:custom_component_minline="1"
            app:custom_component_maxLength="25"
            app:custom_component_title = "@string/PASSWORD"
            app:custom_component_title_color="@color/color_brownish_grey_two"
            app:custom_component_title_error_color="@color/color_error"
            app:custom_component_border_color="@color/color_warm_grey"
            app:custom_component_border_error_color="@color/color_error"
            />
    </LinearLayout>



</RelativeLayout>